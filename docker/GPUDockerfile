FROM nvidia/cuda:11.8.0-runtime-ubuntu22.04

RUN apt-get update && apt-get install -y --no-install-recommends \
    software-properties-common \
    libsm6 libxext6 ffmpeg libfontconfig1 libxrender1 libgl1-mesa-glx \
    curl python3-pip

RUN pip3 install --upgrade pip -i https://pypi.tuna.tsinghua.edu.cn/simple --timeout 120
RUN pip3 install torch==2.1.0 torchvision==0.16.0 --index-url https://download.pytorch.org/whl/cu118 -i https://pypi.tuna.tsinghua.edu.cn/simple --timeout 120
RUN pip3 install xformers==0.0.22.post4 --index-url https://download.pytorch.org/whl/cu118 -i https://pypi.tuna.tsinghua.edu.cn/simple --timeout 120

# 复制本地代码到容器中
COPY . /app
WORKDIR /app

# 安装本地包及其依赖
RUN pip3 install -e . -i https://pypi.tuna.tsinghua.edu.cn/simple --timeout 120

EXPOSE 8080

CMD ["bash"]
